{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="employees-login-form-container">
		<div class="home-page-main-container__nav-container">
			<ul class="nav nav-tabs ">
				<li class="nav-item  home-page-main-container__nav-li">
					<a class="nav-link home-page-main-container__ancore-register" aria-current="page" href="{{path("home")}}">Home</a>
				</li>
				<li class="nav-item">
					<a class="nav-link home-page-main-container__ancore-register" href="{{path("app_login")}}">Sign In</a>
				</li>
				<li class="nav-item">
					<a class="nav-link home-page-main-container__ancore-register" href="{{path("employee_register")}}">Create Account</a>
				</li>
				<li class="nav-item">
					<a class="nav-link home-page-main-container__ancore-register" href="{{path("employees_records_access")}}" tabindex="-1" aria-disabled="true">Admin</a>
				</li>
			</ul>
		</div>
		<div class="container my-5">
			<div class="row mx-auto">
				<div class="col-md-6 mx-auto">
					<div class="card-header">
						Log In form
					</div>
					<div class="card-body">
						<form method="post">
							{% if error %}
								<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}

							{% if app.user %}
								<div class="mb-3">
									You are logged in as
									{{ app.user.username }},
									<a href="{{ path('app_logout') }}">Logout</a>
								</div>
							{% endif %}

							<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
							<div class="form-group">
								<label for="inputNickName">Credentials</label>
								<input type="text" value="{{ last_username }}" name="nickName" id="inputNickName" class="form-control" required autofocus>
							</div>
							<div class="form-group">
								<label for="inputPassword">Password</label>
								<input type="password" name="password" id="inputPassword" class="form-control" required>
							</div>

							<input
							type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							{#
																																																									        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																																																									        See https://symfony.com/doc/current/security/remember_me.html
																																																									
																																																									        <div class="checkbox mb-3">
																																																									            <label>
																																																									                <input type="checkbox" name="_remember_me"> Remember me
																																																									            </label>
																																																									        </div>
																																																									    #}

							<button class="btn btn-block btn-primary" type="submit">
								Sign in
							</button>
						</form>
					</div>
				</div>
			</div>
		</div>

	</div>
{% endblock %}
