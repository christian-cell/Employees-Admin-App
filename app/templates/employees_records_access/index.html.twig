{% block body %}
	<div class="employees-records-main-container ">

		<div class="employees-records-main-container__table-form-container mx-auto my-5">
			<div class="row mx-auto ">

				<div class="col-md-6">
					<div class="employeesRecords-main-container__employees-records-table-container">
						<table class="table table-hover">
							<thead class="table-dark">
								<tr>
									<th>
										NickName
									</th>
									<th>
										Rol
									</th>
									<th>
										Department
									</th>
									<th>
										Salary
									</th>
									<th>
										Credentials
									</th>
								</tr>
							</thead>
							{% for employeeRecord in employeesRecords %}
								<tbody>
									<tr class="table-active">
										<td>
											{{employeeRecord.nickName}}
										</td>
										<td>
											{{employeeRecord.Rol}}
										</td>
										<td>
											{{employeeRecord.Department}}
										</td>
										<td>
											{{employeeRecord.Salary}}
										</td>
										<td>
											{{employeeRecord.Credentials}}
										</td>
									</tr>
								</tbody>
							{% endfor %}
						</table>
					</div>
				</div>
				<div class="col-md-6">
					<ul class="nav nav-tabs ">
						<li class="nav-item">
							<a class="nav-link home-page-main-container__ancore-register" aria-current="page" href="{{path("home")}}">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link home-page-main-container__ancore-register" href="{{path("app_login")}}">Sign In</a>
						</li>
						<li class="nav-item">
							<a class="nav-link home-page-main-container__ancore-register" href="{{path("employee_register")}}">Create Account</a>
						</li>
						<li class="nav-item">
							<a class="nav-link home-page-main-container__ancore-register" href="{{path("employees_records_access")}}" tabindex="-1" aria-disabled="true">Admin</a>
						</li>
					</ul>
